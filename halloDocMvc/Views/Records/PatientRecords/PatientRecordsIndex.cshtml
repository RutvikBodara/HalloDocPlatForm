@model HalloDoc.DAL.ViewModals.Records.SearchPatientRecords
<div class="container-fluid mt-lg-5 mt-sm-3 mb-5">
    <!-- backbtn -->
    <div class="d-flex justify-content-center">
        <div class="col-12 d-flex justify-content-start mb-3 mt-3">
            <div class="h4">Patient Records</div>
        </div>
    </div>
    <!-- form for submit -->
    <div class="d-flex justify-content-center">
        <div class="col-12 shadow p-3"
             style="border-radius: 10px">
            <form id="SearchPatHistory">
                <div class=" row">
                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="FirstName" type="text" class="form-control" id="Patientname" placeholder="First Name" />
                            <label for="Patientname">First Name</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="LastName" type="text" class="form-control" id="PatLastName" placeholder="Last Name" />
                            <label for="PatLastName">Last Name </label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="phoneNumber" type="text" class="form-control" id="PhoneNumber" placeholder="Phone Number" />
                            <label for="PhoneNumber">Phone Number </label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="EmailAddress" type="text" class="form-control" id="PatEmail" placeholder="Email" />
                            <label for="PatEmail">Email</label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btn-outline-primary" id="ClearHistorySearch">Clear</button>
                        <button class="btn btn-primary" id="submitHistorySearch" type="submit">Submit</button>
                    </div>
                </div>
            </form>
            @* partialview *@
            <div id="PatientHitory">
            </div>
        </div>
    </div>
</div>

<script src="/js/Records/PatientRecordsScript.js"></script>

