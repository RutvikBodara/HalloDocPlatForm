@model HalloDoc.DAL.ViewModals.Records.SearchFilterModel
<div class="container-fluid mt-lg-5 mt-sm-3 mb-5">
    <!-- backbtn -->
    <div class="d-flex justify-content-center">
        <div class="col-12 d-flex justify-content-start mb-3 mt-3">
            <div class="h4">Block History</div>
        </div>
    </div>
    <!-- form for submit -->
    <div class="d-flex justify-content-center">
        <div class="col-12 shadow p-3"
             style="border-radius: 10px">
            <form id="BlockHistory">
                <div class=" row">
                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="patName" type="text" class="form-control" id="BlockedName" placeholder="Name" />
                            <label for="BlockedName">Name</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="FromDate" type="date" class="form-control" id="BlockedDate" placeholder="Date" />
                            <label for="BlockedDate">Date </label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="Email" type="text" class="form-control" id="PatEmail" placeholder="Email" />
                            <label for="PatEmail">Email</label>
                        </div>
                    </div>

                    <div class="col-sm-6 col-12 col-md-3">
                        <div class="form-floating mb-4">
                            <input asp-for="PhoneNumber" type="text" class="form-control" id="PhoneNumber" placeholder="Phone Number" />
                            <label for="PhoneNumber">Phone Number </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btn-outline-primary" id="ClearBlockSearch">Clear</button>
                        <button class="btn btn-primary" id="submitHistorySearch" type="submit">Submit</button>
                    </div>
                </div>
            </form>
            @* partialview *@
            <div id="BlocKHistoryTable">
            </div>
        </div>
    </div>
</div>
<script src="/js/Records/BlockHistoryScript.js"></script>

