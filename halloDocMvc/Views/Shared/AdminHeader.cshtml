<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin </title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css" /> *@
    <script type="text/javascript" src="https://cdn.rawgit.com/prashantchaudhary/ddslick/master/jquery.ddslick.min.js"></script>
    <link rel="stylesheet" href="/css/adminDashBoardcss.css">
    <link rel="stylesheet" href="/css/ShineEffect.css" />
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" type="text/css" href="https://api.tomtom.com/maps-sdk-for-web/cdn/6.x/6.25.0/maps/maps.css" />
    <script src="https://api.tomtom.com/maps-sdk-for-web/cdn/6.x/6.25.0/maps/maps-web.min.js"></script>
    <link rel="stylesheet" href="/css/Adminstyle.css">
</head>
<body class="patientSubmitRequestMain" style="overflow-x:hidden">
    <div class="shadow mx-0">
        <header id="headermain" class="navbar navbar-expand-md d-flex  justify-content-between patientSubmitRequestHeader ps-3 p-1 border-bottom h-25">

            @if (@ViewBag.firstname != null)
            {
                <button onclick="openNav()" class="navbar-toggler ms-2 btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#tabspatient">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-list" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"></path>
                    </svg>
                </button>
            }
            <div class="mx-3 d-flex justify-content-start">
                <img class="img-fluid " src="/images/logo.png" alt="" style="height:60px">
            </div>

            <div class="darkbtnheader clearfix d-flex justify-content-end">
                <div class="d-inline-flex">
                    @if (@ViewBag.firstname != null)
                    {
                        <div class="mt-2 d-none d-lg-block d-md-inline-block">Welcome @ViewBag.firstname <span class="">@ViewBag.lastname</span></div>

                        <a asp-controller="PatientSide" asp-action="logout">
                            <button class="btn btn-outline-primary mx-4">
                                <div class="d-block d-sm-none">
                                    <i class="bi bi-box-arrow-right"></i>
                                </div>
                                <div class="d-none d-lg-block d-md-block d-sm-block">
                                    logout
                                </div>

                            </button>
                        </a>
                    }
                </div>

                <button type="button" id="dmodes" onclick="darkmode()" class="btn dmode btn-outline-primary">
                    <img src="/images/dark_mode_black_24dp.svg" alt="">
                </button>
            </div>
        </header>

        @* //large screen options *@
        <nav class="navbar navbar-expand-md  d-none d-md-block d-sm-block ps-3 p-1 mb-3  ">
            <div class="collapse navbar-collapse row" id="navbarNav">
                <div class="d-flex gap-1">
                    @if (Model.Any(x => x.Menuid == 7))
                    {
                        <button id="AdminDash" class="admin-btn">DashBoard</button>
                    }
                    @if (Model.Any(x => x.Menuid == 23))
                    {
                        <button id="ProviderLocation" class="admin-btn">Provider Location</button>
                    }
                    @if (Model.Any(x => x.Menuid == 10))
                    {
                        <button id="AdminProfileEdit" class="admin-btn">My Profile</button>
                    }
                    @*  @if (Model.Any(x => x.Menuid == 12) && Model.Any(x =>x.Menuid == 2))
                    { *@
                    <div class="btn-group text-white">
                        <button class="admin-btn" id="Provider" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                            Provider
                        </button>
                        <ul class="dropdown-menu dropdown-menu-lg-center shadow">
                            @if (Model.Any(x => x.Menuid == 12))
                            {
                                <li id="Provider-drop-down"><button class="dropdown-item" type="button">Provider</button></li>
                            }
                            @if (Model.Any(x => x.Menuid == 2))
                            {
                                <li id="Scheduling-drop-Down"><button class="dropdown-item" type="button">Scheduling</button></li>
                            }
                            @* <li id="Invoce-drop-down"><button class="dropdown-item" type="button">Invoicing</button></li> *@
                        </ul>
                    </div>
                    @* } *@

                    @if (Model.Any(x => x.Menuid == 15))
                    {
                        <button id="Partner" class="admin-btn">Partner</button>
                    }
                    @*  @if (Model.Any(x => x.Menuid == 11) && Model.Any(x=>x.Menuid ==4))
                    { *@
                    <div class="btn-group text-white">
                        <button class="admin-btn" id="Access" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                            Access
                        </button>
                        <ul class="dropdown-menu dropdown-menu-lg-center shadow">
                            @if (Model.Any(x => x.Menuid == 11))
                            {
                                <li id="Account-access-drop-down"><button class="dropdown-item" type="button">Account</button></li>
                            }
                            @if (Model.Any(x => x.Menuid == 4))
                            {
                                <li id="User-Access"><button class="dropdown-item" type="button">User Access</button></li>
                            }
                        </ul>
                    </div>
                    @* } *@

                    @*   @if (Model.Any(x => x.Menuid == 26) && Model.Any(x => x.Menuid == 18) && Model.Any(x => x.Menuid == 30) && Model.Any(x => x.Menuid == 26) && Model.Any(x => x.Menuid == 27))
                    { *@
                    <div class="btn-group text-white">
                        <button class="admin-btn" id="Records" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                            Records
                        </button>
                        <ul class="dropdown-menu dropdown-menu-lg-center shadow">
                            @if (Model.Any(x => x.Menuid == 26))
                            {
                                <li id="Search-Records"><button class="dropdown-item" type="button">Search Records</button></li>
                            }
                            @if (Model.Any(x => x.Menuid == 18))
                            {
                                <li id="Email-Logs"><button class="dropdown-item" type="button">Email Logs</button></li>
                            }
                            @if (Model.Any(x => x.Menuid == 30))
                            {
                                <li id="SMS-Logs"><button class="dropdown-item" type="button">SMS Logs</button></li>
                            }
                            @if (Model.Any(x => x.Menuid == 26))
                            {
                                <li id="Patient-Records"><button class="dropdown-item" type="button">Patient Records</button></li>
                            }
                            @if (Model.Any(x => x.Menuid == 27))
                            {
                                <li id="Blocked-History"><button class="dropdown-item" type="button">Blocked History</button></li>
                            }

                        </ul>
                    </div>
                    @* } *@

                </div>
            </div>
        </nav>

    </div>
    <div id="mySidebar" class="sidebar">
        <a class="closebtn" onclick="closeNav()">×</a>
        @if (Model.Any(x => x.Menuid == 7))
        {
            <div class="navi col-lg-1 col-md-1  active">
                <a class="nav-link" onclick="$('#AdminDash').click() ,closeNav()">DashBoard</a>
            </div>
        }
        @if (Model.Any(x => x.Menuid == 23))
        {
            <div class="col-lg-1 col-md-1 nav-item">
                <a class="nav-link" onclick="$('#ProviderLocation').click(),closeNav()">Provider Location</a>
            </div>
        }
        @if (Model.Any(x => x.Menuid == 10))
        {
            <div class="col-lg-1 col-md-1 nav-item ">
                <a class="nav-link" onclick="$('#AdminProfileEdit').click(), closeNav()">My Profile</a>
            </div>
        }
        <div class="col-lg-1 col-md-1 nav-item">
            <a class="nav-link" data-bs-toggle="collapse" data-bs-target="#Providercol" id="ProviderBtn">Providers</a>
            <div class="collapse" id="Providercol">
                @if (Model.Any(x => x.Menuid == 12))
                {
                    <a class="nav-link" onclick="$('#Provider-drop-down').click(),$('#ProviderBtn').click(),closeNav()">Provider</a>
                }
                @if (Model.Any(x => x.Menuid == 2))
                {
                    <a class="nav-link" onclick="$('#Scheduling-drop-Down').click(),$('#ProviderBtn').click(), closeNav()">Scheduling</a>
                }
                @* <a class="nav-link" onclick="$('#Invoce-drop-down').click(),$('#Provider').click(), closeNav()">Invoicing</a> *@
            </div>
        </div>
        @if (Model.Any(x => x.Menuid == 15))
        {
            <div class="col-lg-1 col-md-1 nav-item">
                <a class="nav-link" onclick="$('#Partner').click(),closeNav()">Partners</a>
            </div>
        }

        <div class=" col-lg-1 col-md-1 nav-item">
            <a class="nav-link" data-bs-toggle="collapse" data-bs-target="#Accesscol" id="AccessBtn">Access</a>
            <div class="collapse" id="Accesscol">
                @if (Model.Any(x => x.Menuid == 11))
                {
                    <a class="nav-link" onclick="$('#Account-access-drop-down').click(),$('#AccessBtn').click(),closeNav()">Account</a>
                }
                @if (Model.Any(x => x.Menuid == 4))
                {
                    <a class="nav-link" onclick="$('#User-Access').click(),$('#AccessBtn').click(), closeNav()">User Access</a>
                }
            </div>
        </div>

        <div class="col-lg-1  col-md-1 nav-item ">
            <a class="nav-link" data-bs-toggle="collapse" data-bs-target="#Recordscol" id="RecordsBtn">Records</a>
            <div class="collapse" id="Recordscol">
                @if (Model.Any(x => x.Menuid == 26))
                {
                    <a class="nav-link" onclick="$('#Search-Records').click(), closeNav()">Search Records</a>
                }
                @if (Model.Any(x => x.Menuid == 18))
                {
                    <a class="nav-link" onclick="$('#Email-Logs').click(), closeNav()">Email logs</a>
                }
                @if (Model.Any(x => x.Menuid == 30))
                {
                    <a class="nav-link" onclick="$('#SMS-Logs').click(), closeNav()">SMS logs</a>
                }
                @if (Model.Any(x => x.Menuid == 26))
                {
                    <a class="nav-link" onclick="$('#Patient-Records').click(), closeNav()">Patient History</a>
                }
                @if (Model.Any(x => x.Menuid == 27))
                {
                    <a class="nav-link" onclick="$('#Blocked-History').click(), closeNav()">Blocked History</a>
                }
            </div>
        </div>
    </div>
    <partial name="_alerts" />
    @RenderBody()
    <footer class="d-flex justify-content-end patientsubmitreqfooter p-2">
        <div>
            <span>
                <a href="" class="me-3 tnc"> Terms And Conditions </a> <span>| </span> <a href="" class="privacypolicy ms-3">Privacy Policy</a>
            </span>
        </div>
    </footer>
