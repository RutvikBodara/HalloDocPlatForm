<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin </title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
</head>
<body class="patientSubmitRequestMain" style="overflow-x:hidden">
    <div class="shadow">
        <header id="headermain" class="navbar navbar-expand-md d-flex flex-row patientSubmitRequestHeader border-bottom h-25 w-100">
            <div class="d-flex justify-content-start">
                @if (@ViewBag.firstname != null)
                {
                    <button class="navbar-toggler ms-2 btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-list" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"></path>
                        </svg>
                    </button>
                }
                <div class="mx-3">
                    <img class="img-fluid " src="/images/logo.png" alt="" style="height:70px">
                </div>

            </div>
            <div class="darkbtnheader clearfix d-flex justify-content-end w-100">
                <div class="d-inline-flex">
                    @if (@ViewBag.firstname != null)
                    {
                        <div class="mt-2 d-none d-lg-block d-md-inline-block">Welcome @ViewBag.firstname <span class="">@ViewBag.lastname</span></div>

                        <a asp-controller="PatientDashboard" asp-action="logout">
                            <button class="btn btn-outline-primary mx-4">
                                <div class="d-block d-sm-none">
                                    <i class="bi bi-box-arrow-right"></i>
                                </div>
                                <div class="d-none d-lg-block d-md-block d-sm-block">
                                    logout
                                </div>

                            </button>
                        </a>
                    }
                </div>

                <button type="button" id="dmodes" onclick="darkmode()" class="btn dmode btn-outline-primary">
                    <img src="/images/dark_mode_black_24dp.svg" alt="">
                </button>
            </div>
        </header>

        @* //large screen options *@
        <nav class="navbar navbar-expand-md ps-3 p-1 mb-3  ">
            <div class="collapse navbar-collapse row" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item nav-item1 px-2 d-inline">
                        <div id="PatientDash" class="nav-link">DashBoard</div>
                    </li>
                    <li class="nav-item  nav-item2 px-2 d-inline">
                        <div id="ProfileEdit" class="nav-link">Profile</div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <partial name="_alerts" />
    @RenderBody()
    <footer class="d-flex justify-content-end patientsubmitreqfooter p-2">
        <div>
            <span>
                <a href="" class="me-3 tnc"> Terms And Conditions </a> <span>| </span> <a href=""
                                                                                          class="privacypolicy ms-3">Privacy Policy</a>
            </span>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/AdminHeaderScript.js"></script>
    <script src="/js/script.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/SideBarScript.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @RenderSection("scriptdashboard", required: false)
</body>
</html>

