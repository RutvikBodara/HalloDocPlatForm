<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Patient Submit Request</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)

</head>
<body class="patientSubmitRequestMain">
    <header id="headermain" class="navbar navbar-expand-md d-flex flex-row shadow patientSubmitRequestHeader h-25">
        @if (@ViewBag.firstname != null)
        {
            <button onclick="openNav()" class="navbar-toggler ms-2 btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#tabspatient">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-list" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"></path>
                </svg>
            </button>
        }
        <div class="mx-3">
            <img class="img-fluid " src="/images/logo.png" alt="" style="height:70px">
        </div>
        <div class="darkbtnheader clearfix d-flex justify-content-end">

            <div class="d-inline-flex">
                @if (@ViewBag.firstname != null)
                {
                    <div class="mt-2 d-none d-lg-block d-md-inline-block">Welcome @ViewBag.firstname <span class="">@ViewBag.lastname</span></div>

                    <a asp-controller="PatientDashboard" asp-action="logout">
                        <button class="btn btn-outline-primary mx-4">
                            <div class="d-block d-sm-none">
                                <i class="bi bi-box-arrow-right"></i>
                            </div>
                            <div class="d-none d-lg-block d-md-block d-sm-block">
                                logout
                            </div>

                        </button>
                    </a>
                }
            </div>

            <button type="button" id="dmodes" onclick="darkmode()" class="btn dmode btn-outline-primary">
                <img src="/images/dark_mode_black_24dp.svg" alt="">
            </button>
        </div>
    </header>
    <partial name="_alerts" />
    @RenderBody()

    <footer class="d-flex justify-content-end patientsubmitreqfooter p-2">
        <div>
            <span>
                <a href="" class="me-3 tnc"> Terms And Conditions </a> <span>| </span> <a href=""
                                                                                          class="privacypolicy ms-3">Privacy Policy</a>
            </span>
        </div>
    </footer>

    <script src="/js/script.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @RenderSection("scriptdashboard", required: false);
