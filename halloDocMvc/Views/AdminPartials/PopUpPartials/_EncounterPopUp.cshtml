<div class="modal fade" id="Encounter_Model" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Select Type Of Care</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <input type="radio" class="btn-check" name="options" id="HouseCall" checked>
                    <label class="btn btn-outline-primary p-2 mx-2" for="HouseCall">HouseCall</label>

                    <input type="radio" class="btn-check" name="options" id="Consult">
                    <label class="btn btn-outline-primary p-2 mx-2" for="Consult">Consult</label>
                </div>
            </div>
            <div class="modal-footer">
                <input onclick="SaveEncounter()" type="button" class="btn btn-outline-primary" id="SaveEncounter" value="save">
                <button type="button" class="btn btn-outline-primary EncounterCancel" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>