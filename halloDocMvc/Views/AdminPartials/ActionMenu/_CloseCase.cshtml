            <div class="h5 mt-4 mb-4">
                Patient Information
            </div>
            <form id="closeCaseForm">
                <div class="row mt-2 mb-2">
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" id="floatingInputz" name="firstname" placeholder="First Name" value="@ViewBag.ClientName.Firstname" required />
                            <label for="floatingInpuz">First Name</label>
                            <span style="color:indianred"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" id="floatingInputx" name="lastname" placeholder="Last Name" value="@ViewBag.ClientName.Lastname" />
                            <label for="floatingInputx">Last Name</label>
                            <span style="color:indianred"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-4">
                            <input type="date" class="form-control" id="floatingInputc" name="DateOfBirth" placeholder="Date" value="@ViewBag.ClientName.Strmonth"  />
                            <label for="floatingInputc">Date</label>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 d-flex">
                        <div class="col-8">
                            <div class="input-group form-floating mobilenumHolder mb-4">
                                <input type="tel" class="form-control Patientmobile pt-3 pb-3" name="callNumber" value="@ViewBag.ClientName.Phonenumber" required />
                                <span id="mobilePatientValidation" style="color:indianred"></span>
                            </div>
                        </div>
                        <div class="col-2 ms-2">
                            <button class="btn btn-outline-primary p-3" onclick="window.open(`tel:@ViewBag.ClientName.Phonenumber`);">
                                <i class="bi bi-telephone"></i>
                            </button>
                        </div>

                    </div>


                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-4">
                            <input type="email" class="form-control" id="PatEmailv" name="Email" placeholder="Email" value="@ViewBag.ClientName.Email" required />
                            <label for="PatEmailv">Email</label>
                            <span style="color:indianred"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <button id="CloseCaseEditbtn" class="btn btn-outline-primary p-3">
                            Edit
                        </button>

                        <button id="CloseCaseSubmitbtn" type="submit" class="btn btn-outline-primary p-3">
                            Submit
                        </button>

                    </div>

                </div>
            </form>

            <button id="CloseCaseCancelbtn" class="btn btn-danger p-3">
                Close Case
            </button>
        </div>


    </div>

</div>
