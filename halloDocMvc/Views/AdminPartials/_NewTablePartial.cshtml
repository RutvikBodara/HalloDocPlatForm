
<partial name="~/Views/AdminPartials/PopUpPartials/_BlockRequestPopup.cshtml" />
<partial name="~/Views/AdminPartials/PopUpPartials/_CancelRequestPopup.cshtml" />
<partial name="~/Views/AdminPartials/PopUpPartials/_AssignCasePopUp.cshtml" />

@if (Model.maxPage != 0)
{
    <div class="mt-3 table-responsive d-none d-md-block mb-5">
        <table id="NewRequestsExcel" class="table mb-5" style="border:none">
            <thead>
                <tr>
                    <td>Name</td>
                    <td></td>
                    <td>DateOfBirth</td>
                    <td>Requestor</td>
                    <td>RequestedDate</td>
                    <td>phone</td>
                    <td>Address</td>
                    <td>Notes</td>
                    @* <td>Chat With</td> *@
                    <td>Action</td>
                </tr>
            </thead>
            <tboday>
                @foreach (var obj in Model.NewRequestViewModels)
                {

                    var uuid = Guid.NewGuid();
                    //modal note
                    var background = "";
                    var requestor = "";
                    switch (obj.RequestType)
                    {
                        case 1:
                            background = "rgb(226, 98, 119)";
                            requestor = "business";
                            break;

                        case 2:
                            background = "rgb(25, 135, 84)";
                            break;

                        case 3:
                            background = "rgb(237, 145, 36)";
                            requestor = "Family";
                            break;
                        case 4:
                            background = "rgb(0, 186, 250)";
                            requestor = "Concierge";
                            break;
                    }
                    <tr class="bg-danger text-white">
                        <td class="text-white" style="background-color:@background">
                            @obj.Firstname
                            <br />
                            @if (obj.status == 21)
                            {
                                <button class="btn btn-danger disabled">Request Assigned</button>
                            }
                            else if (obj.status == 22)
                            {
                                <button class="btn btn-danger disabled">ReTransfer</button>
                            }
                        </td>
                        <td class="text-white" style="background-color:@background"><button class="btn btn-outline-light" onclick="window.open('mailto:@obj.Email')"><i class="bi bi-envelope"></i> </button></td>

                        <td class="text-white" style="background-color:@background">
                            @if (obj.DateOfBirth != null)
                            {
                                @obj.DateOfBirth
                            }
                            else
                            {
                                <p>-</p>
                            }
                        </td>
                        <td class="text-white" style="background-color:@background">@obj.Requestor</td>
                        <td class="text-white" style="background-color:@background">@obj.Requesterdate</td>
                        <td class="text-white" style="background-color:@background">
                            <button class="btn btn-outline-light" onclick="window.open('tel:@obj.Phonenumber');">
                                <i class="bi bi-telephone"></i>
                                @obj.Phonenumber (Patient)
                            </button>
                            <br /><br />
                            @if (obj.RequestType != 2)
                            {

                                <button class="btn btn-outline-light" onclick="window.open('tel:@obj.MobileRequestor');">
                                    <i class="bi bi-telephone"></i>
                                    @obj.MobileRequestor (@requestor)
                                </button>
                            }
                        </td>

                        <td class="text-white" style="background-color:@background;">
                            @if (obj.Address != "")
                            {
                                @obj.Address
                            }
                            else
                            {
                                <p>-</p>
                            }
                        </td>

                        <td class="text-white" style="background-color:@background">
                            @if (obj.Notes != null)
                            {
                                @obj.Notes

                            }
                            else
                            {
                                <p>-</p>
                            }
                        </td>
                        <td class="text-white" style="background-color:@background">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-light" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                    Actions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-lg-end">
                                    @if (obj.status != 21)
                                    {
                                        <li onclick="AssignModal(@obj.RequestId,'@obj.Region')"><button class="dropdown-item" type="button"><i class="bi bi-card-checklist pe-2"></i> Assign Case</button></li>
                                    }
                                    <li id="CancelList" onclick="CancelModal(@obj.RequestId, '@obj.Firstname')">
                                        <button class="dropdown-item" type="button"><i class="bi bi-x-circle pe-2"></i> Cancel Case</button>
                                    </li>
                                    <li class="viewCases" onclick="viewCases(@obj.RequestId)"><button class="dropdown-item" type="button"><i class="bi bi-search pe-2"></i> View Case</button></li>
                                    <li onclick="ShowViewNotes(@obj.RequestId)"><button class="dropdown-item" type="button"><i class="bi bi-journal-text pe-2"></i>  View Notes</button></li>
                                    <li onclick="BlockModel(@obj.RequestId, '@obj.Firstname')"><button class="dropdown-item" type="button"><i class="bi bi-ban pe-2"></i> BlockPatient</button></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tboday>
        </table>
        <div class="d-flex justify-content-between">
            <span class="justify-content-start me-3 "> @Model.PageNumber  of @Model.maxPage </span>
            <div class="d-flex justify-content-end mt-4 mb-5 gap-1">
                <button class="btn btn-primary " style="border-radius:10%" onclick="FirstPage()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="bi bi-chevron-double-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                    </svg>
                </button>
                <button class="btn btn-primary" style="border-radius:10%" onclick="Previous()">Prev</button>
                <input id="PageNumber" type="number" class="pt-2 pb-2" value="@Model.PageNumber" style="border:none; border-radius:50%; width:50px; height:50px; font-family:500; text-align:center; " disabled />
                <button class="btn btn-primary" style="border-radius:10%" onclick="Next('@Model.maxPage')">Next</button>
                <button class="btn btn-primary me-5" style="border-radius:10%" onclick="lastPage()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-chevron-double-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M3.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L9.293 8 3.646 2.354a.5.5 0 0 1 0-.708" />
                        <path fill-rule="evenodd" d="M7.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L13.293 8 7.646 2.354a.5.5 0 0 1 0-.708" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center text-danger h3">
        Data Not Found
    </div>
}


<div class="d-block d-md-none patienttable">
    @if (Model.maxPage != 0)
    {
        @foreach (var obj in Model.NewRequestViewModels)
        {
            var uuid = Guid.NewGuid();
            <div class="shadow p-2" @* style="background-color:#e4f8ff" *@>
                <div class="pt-2 ps-3" data-bs-toggle="collapse" href="#A-@uuid" aria-expanded="false" aria-controls="#A-@uuid">

                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            @obj.Firstname
                            @if (obj.status == 21)
                            {
                                <button class="btn btn-danger disabled">Requeste Assigned</button>
                            }
                            else if (obj.status == 22)
                            {
                                <button class="btn btn-danger">ReTransfer</button>
                            }

                        </div>
                        <div class="me-3">
                            @if (obj.RequestType == 1)
                            {
                                <span>Business</span>
                                <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                    <circle fill="#e26277" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                                </svg>
                            }
                            else if (obj.RequestType == 2)
                            {
                                <span>Patient</span>
                                <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                    <circle fill="#198754" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                                </svg>
                            }
                            else if (obj.RequestType == 3)
                            {
                                <span>Family</span>
                                <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                    <circle fill="#ed9124" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                                </svg>
                            }
                            else if (obj.RequestType == 4)
                            {
                                <span>Concierge</span>
                                <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                    <circle fill="#00bafa" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                                </svg>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p class="">
                            @obj.Address
                        </p>
                        <div class="me-3">
                            <a href="http://maps.google.com/?q={@obj.Address}" target="_blank" class="mapbtn btn btn-outline-primary"><span><i class="bi bi-geo-alt"></i></span></a>
                        </div>
                    </div>
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-clock" viewBox="0 0 16 16">
                            <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z" />
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0" />
                        </svg>
                        <span> Wait Time:@obj.Requesterdate</span>
                    </div>
                </div>
                <hr />
                <div class="collapse multi-collapse col-sm-12 ps-3 in" id="A-@uuid">
                    <div class="ms-2 mt-2">
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-calendar3" viewBox="0 0 16 16">
                                <path d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2M1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857z" />
                                <path d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2m3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2m3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2m-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2m3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2m3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2m3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2m-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2m3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2m3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
                            </svg>
                        </span>
                        <span>
                            Date Of birth:
                            @if (@obj.DateOfBirth != null)
                            {
                                @obj.DateOfBirth
                            }
                            else
                            {
                                <span>Not Provided</span>
                            }
                        </span>
                    </div>

                    <div class="ms-2 mt-2 ">
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-envelope" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                            </svg>
                        </span>
                        <span>
                            Email: @obj.Email
                        </span>
                    </div>

                    <div class="ms-2 mt-2">
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-telephone" viewBox="0 0 16 16">
                                <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                            </svg>
                        </span>
                        <span>
                            Patient: @obj.Phonenumber
                        </span>
                    </div>

                    <div class="ms-2 mt-2">
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                            </svg>
                        </span>
                        <span>
                            Requestor:@obj.Requestor
                        </span>
                    </div>

                    <div class="d-flex row mt-3 gap-2 ms-2">
                        @if (obj.status != 21)
                        {
                            <button class="btn col-5 text-white" onclick="AssignModal(@obj.RequestId,'@obj.Region' , 'AssignCase')" style="background-color:#198754">Assign Case</button>
                        }
                        <button onclick="viewCases(@obj.RequestId)" class="viewCases btn col-5 text-white" style="background-color:blue">View Case</button>
                        <button onclick="CancelModal(@obj.RequestId, '@obj.Firstname')" id="CancelList" class="btn col-5 text-white" style="background-color:#dc3545">Cancel Notes</button>
                        <button onclick="ShowViewNotes(@obj.RequestId)" class="btn col-5 text-white" style="background-color:#198754">View Notes</button>
                        <button onclick="BlockModel(@obj.RequestId, '@obj.Firstname')" class="btn col-5 text-white" style="background-color:#dc3545">Block Patient</button>
                        <button class="btn col-5 text-white" onclick="window.open('mailto:@obj.Email')" style="background-color:#198754">Email</button>
                    </div>
                </div>
            </div>
            <br />
        }
        <div class="d-flex justify-content-center pb-5 gap-1">
            <button class="btn btn-primary " style="border-radius:10%" onclick="FirstPage()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-chevron-double-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                    <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg>
            </button>
            <button class="btn btn-primary" style="border-radius:10%" onclick="Previous()">Prev</button>
            <input id="PageNumber" type="number" class="pt-2 pb-2" value="@Model.PageNumber" style="border:none; border-radius:50%; width:50px; height:50px; font-family:500; text-align:center; " disabled />
            <button class="btn btn-primary" style="border-radius:10%" onclick="Next('@Model.maxPage')">Next</button>
            <button class="btn btn-primary me-5" style="border-radius:10%" onclick="lastPage()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chevron-double-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M3.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L9.293 8 3.646 2.354a.5.5 0 0 1 0-.708" />
                    <path fill-rule="evenodd" d="M7.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L13.293 8 7.646 2.354a.5.5 0 0 1 0-.708" />
                </svg>
            </button>
        </div>
    }
</div>

