<script>
    $(".UploadFileForm").on("submit", function (e) {
        e.preventDefault();
        if ($("#UploadForm").val() == '') {
            toastr.error("please select file first")
        }
        else {
            var formData = new FormData($(this)[0]);

            $.ajax({
                url: '/ProviderAccount/Upload_View_Document',
                method: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response != null) {
                        toastr.success("FileUploaded");
                    }
                    else {
                        toastr.error("Something Went Wrong");
                    }
                    $(".Provider-data-container").load('/ProviderAccount/ConcludeCareIndex?RequestId=' + response);
                }
            });
        }
    });

    $("#ConcludeCasebtn").click(function (e) {
        e.preventDefault();
        if ($("#PhysicianNotes").val() == '') {
            $("#PhysicianNotesValidation").html("Please add Notes")
            return false;
        }
        else {
            $("#PhysicianNotesValidation").html("");
            $.ajax({
                url: '/ProviderAccount/ConcludeCase',
                method: 'POST',
                data: { PhysicianNotes: $("#PhysicianNotes").val() },
                success: function (response) {
                    if (response) {
                        toastr.success("Case Concluded");
                        $(".Provider-data-container").load('/ProviderAccount/ProviderDashBoardMain');
                    }
                    else {
                        toastr.error("Something really happen wrong");
                    }

                }
            });
        }

    })
</script>
