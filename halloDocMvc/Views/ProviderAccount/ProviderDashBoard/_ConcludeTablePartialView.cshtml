                        </svg>
                    </span>
                    Email:
                    <span class="fw-bold">
                        @obj.Email
                    </span>
                </div>

                <div class="ms-2 mt-2">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#60cef3" class="bi bi-telephone" viewBox="0 0 16 16">
                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                        </svg>
                    </span>
                    Patient :
                    <span class="fw-bold">
                        @obj.Phonenumber
                    </span>
                </div>
                <div class="d-flex row mt-3 gap-2 ms-2">
                    @if (obj.IsFinalize == true)
                    {
                        //find some another way
                        <button onclick="ConcludeCare(@obj.RequestId)" class="btn col-5 text-white" style="background-color:orange"> Conclude Care</button>
                    }
                    @* else
                {
                <button onclick="ConcludeCare(@obj.RequestId)" class="btn col-5 text-white" style="background-color:orange" disabled> Conclude Care</button>
                } *@
                    <button onclick="ShowViewNotes(@obj.RequestId)" class="btn col-5 text-white" style="background-color:#198754">View Notes</button>
                    <button onclick="viewCases(@obj.RequestId)" class="viewCases btn col-5 text-white" style="background-color:blue">View Case</button>
                    <button onclick="View_Document(@obj.RequestId)" class="btn col-5 text-white" style="background-color:#198754"> View Uploads</button>
                    @if (obj.IsFinalize == true)
                    {
                        <button onclick="DownloadEncounterFormPopUp(@obj.RequestId)" class="btn col-5 text-white" style="background-color:#198754"> Encounter</button>
                    }
                    else
                    {
                        <button onclick="EncounterModel(@obj.RequestId)" class="btn col-5 text-white" style="background-color:#198754"> Encounter</button>
                    }

                    <button class="btn col-5 text-white" onclick="window.open('mailto:@obj.Email')" style="background-color:#198754">Email</button>
                </div>
            </div>
        </div>
        <br />
