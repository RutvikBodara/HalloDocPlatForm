@model HalloDoc.DAL.ViewModals.RegisterViewModel;

@{
    ViewData["Title"] = "Register Page";
    Layout = "_LAYOUT";
}
@section styles {
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css ">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
}
<div id="logggg">
    <div class="row TaskLine mb-3">
        <h1 class="h1">Login To Your Account</h1>
    </div>
    <div class="row">
        <form method="post">
            <div class="form-floating mb-4 row  username">
                <input asp-for="Email" type="text" class="form-control p-3" id="floatingInput1" placeholder="Email">
                <label asp-for="Email" for="floatingInput1">Email</label>
                <span asp-validation-for="Email" style="color:indianred"></span>
                <div id="usercircle">
                    <i class="bi bi-person-circle" id="toggleUser"></i>
                </div>
            </div>
            <div class="form-floating mb-4 row  password">
                <input asp-for="Password" type="password" class="form-control p-3" id="floatingPassword2" placeholder="password" required>
                <label asp-for="Password" for="floatingPassword2">password</label>
                <span asp-validation-for="Password" style="color:indianred"></span>
            </div>

            <div class="form-floating mb-4 row  password">
                <input asp-for="ConfirmPassword" type="password" class="form-control p-3" id="floatingPassword2" placeholder="Confirm password" required>
                <label asp-for="ConfirmPassword" for="floatingPassword2">Confirm password</label>
                <span asp-validation-for="ConfirmPassword" style="color:indianred"></span>
                <div id="pswd">
                    <i class="bi bi-eye-slash" id="togglePswd"></i>
                </div>
            </div>

            <div class="mb-3 login ">
                <button class="btn btn-primary p-3 w-100  registerbtn" type="submit">Register</button>
            </div>

        </form>
    </div>
</div>
@section eyesection {
    <script src="~/js/PasswordEyeScript.js"></script>
}
@section scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
    <script src="~/js/DisableBack.js"></script>
}



